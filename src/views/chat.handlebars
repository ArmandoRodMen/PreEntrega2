<h3>CHAT de {{username}}</h3>

{{#each messages}}
<div>
    <h3>{{username}} dice:</h3>
    <p>{{message}}</p>
</div>
{{/each}}

<form action="/chat" method="post">
    Username: <input type="text" name="username" value="{{username}}" readonly>
    Message: <input type="text" name="message" id="message">
    <input type="submit" value="SEND">
</form>
